@model Dictionary<string, string>
@{
    ViewData["Title"] = "HashType";
}

<form method="post" asp-action="Add" enctype="application/x-www-form-urlencoded">
    <input type="text" name="name" />
    <input type="text" name="value" />
    <button type="submit" name="name">Kaydet</button>
</form>

@foreach (var item in Model)
{
    <h2>@item.Key -> @item.Value <a asp-action="DeleteItem" asp-route-name="@item.Key">Sil</a></h2>
}